generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id            BigInt         @id @default(autoincrement())
  name          String
  description   String?
  price         Int
  tags          String[]
  createdAt     DateTime    @default(now()) @db.Timestamptz(6)
  updatedAt     DateTime    @updatedAt @db.Timestamptz(6)
}

model Article {
  id            BigInt         @id @default(autoincrement())
  title         String
  content       String
  createdAt     DateTime    @default(now()) @db.Timestamptz(6)
  updatedAt     DateTime    @updatedAt @db.Timestamptz(6)
}